{% extends "PaulMaxwellStudentsAccountingBundle::layout.html.twig" %}

{% block content %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Subject</th>
            <th>Groups affected</th>
        </tr>
        </thead>
        <tbody>
        {% for n, teacher in teachers %}
            <tr>
                <td>{{ n+1 }}</td>
                <td>
                    {{ teacher.person.namelast }}
                    {{ teacher.person.namefirst }}
                    {{ teacher.person.namepatronymic }}
                </td>
                <td>
                    {{ teacher.subject }}
                </td>
                <td><a href="{{ url('paul_maxwell_students_accounting_groups_of_teacher', {'id_teacher': teacher.id}) }}">{{ teacher.groups.count }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
