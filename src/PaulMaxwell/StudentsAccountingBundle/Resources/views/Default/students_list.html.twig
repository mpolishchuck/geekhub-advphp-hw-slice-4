{% extends "PaulMaxwellStudentsAccountingBundle::layout.html.twig" %}

{% block content %}
    {% if criteria is defined %}
    <ul class="list-unstyled">
        {% for criterion in criteria %}
        <li>{{ criterion }}</li>
        {% endfor %}
    </ul>
    {% endif %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Group</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
        {% for n, student in students %}
            <tr>
                <td>{{ n+1 }}</td>
                <td>
                    {{ student.person.namelast }}
                    {{ student.person.namefirst }}
                    {{ student.person.namepatronymic }}
                </td>
                <td>
                    {{ student.group.title }}
                    ({{ student.group.speciality.code }} {{ student.group.speciality.title }})
                </td>
                <td>{{ student.group.course }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
